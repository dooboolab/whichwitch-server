{
  "name": "hackatalk-server",
  "description": "Hackatalk Server",
  "main": "src/server.ts",
  "repository": "https://github.com/dooboolab/hackatalk-server",
  "author": "dooboolab",
  "license": "GPL-3.0-only",
  "scripts": {
    "local": "cross-env NODE_ENV=local sequelize db:migrate && cross-env NODE_ENV=local nodemon --exec ts-node src/server.ts",
    "start": "cross-env NODE_ENV=development sequelize db:migrate && cross-env NODE_ENV=development nodemon --exec ts-node src/server.ts",
    "prod": "cross-env NODE_ENV=production ts-node src/server.ts",
    "pm2": "cross-env NODE_ENV=local pm2 start ts-node -- -P tsconfig.json ./src/server.ts --node-args='--local' --watch",
    "pm2:prod": "cross-env pm2 start ts-node -- -P tsconfig.json ./src/server.ts --node-args='--production'",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "lint": "eslint src/**/**/*.ts tests/**/**/*.ts",
    "tsc": "tsc",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "codegen": "graphql-codegen",
    "generate": "graphql-codegen --config codegen.yml",
    "codecov": "codecov",
    "migrate:generate": "sequelize-cli migration:generate --name",
    "migrate:local": "cross-env NODE_ENV=local sequelize db:migrate",
    "migrate:local:undo": "cross-env NODE_ENV=local sequelize db:migrate:undo",
    "migrate:test": "cross-env NODE_ENV=test sequelize db:migrate",
    "migrate:dev": "cross-env NODE_ENV=development sequelize db:migrate",
    "migrate:prod": "cross-env NODE_ENV=production sequelize db:migrate",
    "migrate": "yarn migrate:test && yarn migrate:dev && yarn migrate:prod"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.2.0",
    "apollo-server": "^2.15.0",
    "apollo-server-express": "^2.15.0",
    "axios": "^0.19.2",
    "azure-storage": "^2.10.3",
    "bcrypt-nodejs": "^0.0.3",
    "cors": "^2.8.5",
    "form-data": "^3.0.0",
    "graphql-import": "^1.0.2",
    "graphql-middleware": "^4.0.2",
    "graphql-tools": "^6.0.8",
    "i18next": "^19.5.0",
    "i18next-express-middleware": "^2.0.0",
    "i18next-node-fs-backend": "^2.1.3",
    "jest": "^26.0.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.10",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "querystring": "^0.2.0",
    "sequelize": "^5.21.13",
    "shortid": "^2.2.15",
    "virgil-crypto": "^4.2.2",
    "virgil-sdk": "^6.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.15.4",
    "@graphql-codegen/core": "^1.15.4",
    "@graphql-codegen/typescript": "^1.15.4",
    "@graphql-codegen/typescript-resolvers": "1.15.4",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/bluebird": "^3.5.32",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/graphql": "^14.5.0",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jest": "^26.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/multer": "^1.4.3",
    "@types/node": "^14.0.13",
    "@types/sequelize": "^4.28.9",
    "@types/shortid": "^0.0.29",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "codecov": "^3.7.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.1.0",
    "eslint": "^7.3.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.4",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "sequelize-cli": "^5.5.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "3.9.5"
  }
}
